<%- include('../partials/header') %>

    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="text-center">Admin Dashboard</h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <a href="/admin/add" class="btn btn-primary mx-2">Add New Admin</a>
            <a href="/dashboard" class="btn btn-outline-secondary mx-2">Back to Main Dashboard</a>
        </div>
    </div>

    <!-- User Management Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">User Management</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Total Income</th>
                                    <th>Total Expense</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(user=> { %>
                                    <tr>
                                        <td>
                                            <%= user.username %>
                                        </td>
                                        <td>
                                            <%= user.email %>
                                        </td>
                                        <td>
                                            <span
                                                class="badge bg-<%= user.status === 'active' ? 'success' : 'danger' %>">
                                                <%= user.status %>
                                            </span>
                                        </td>
                                        <td class="text-success">
                                            Rs.<%= user.totalIncome.toFixed(2) %>
                                        </td>
                                        <td class="text-danger">
                                            Rs.<%= user.totalExpense.toFixed(2) %>
                                        </td>
                                        <td>
                                            <form action="/admin/users/<%= user._id %>/toggle-status" method="POST"
                                                class="d-inline">
                                                <button type="submit"
                                                    class="btn btn-sm btn-outline-<%= user.status === 'active' ? 'warning' : 'success' %>">
                                                    <%= user.status==='active' ? 'Suspend' : 'Activate' %>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% if (users.length===0) { %>
                                            <tr>
                                                <td colspan="6" class="text-center">No members found.</td>
                                            </tr>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>