<%- include('../partials/header') %>

    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="text-center mb-3">
                <i class="fas fa-history me-2 text-gradient"></i>
                Transaction History
            </h2>
            <div class="text-center">
                <a href="/dashboard" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body bg-light py-2">
                    <form action="/transactions" method="GET"
                        class="row g-2 align-items-center flex-nowrap overflow-auto" id="filterForm">
                        <div class="col-auto">
                            <label class="col-form-label btn-sm fw-bold"><i
                                    class="fas fa-filter me-1"></i>Filter:</label>
                        </div>
                        <div class="col-auto" style="min-width: 200px;">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" name="search" class="form-control form-control-sm"
                                    placeholder="Search..." value="<%= query.search || '' %>"
                                    oninput="debounceSubmit()">
                            </div>
                        </div>
                        <div class="col-auto">
                            <input type="date" name="startDate" class="form-control form-control-sm"
                                value="<%= query.startDate || '' %>" title="Start Date" onchange="this.form.submit()">
                        </div>
                        <div class="col-auto">
                            <span class="text-muted">-</span>
                        </div>
                        <div class="col-auto">
                            <input type="date" name="endDate" class="form-control form-control-sm"
                                value="<%= query.endDate || '' %>" title="End Date" onchange="this.form.submit()">
                        </div>
                        <div class="col-auto">
                            <select name="source" class="form-select form-select-sm" onchange="this.form.submit()">
                                <option value="">All Sources</option>
                                <% sources.forEach(s=> { %>
                                    <option value="<%= s._id %>" <%=query.source &&
                                        query.source.toString()===s._id.toString() ? 'selected' : '' %>>
                                        <%= s.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="col-auto">
                            <select name="nature" class="form-select form-select-sm" onchange="this.form.submit()">
                                <option value="">All Nature</option>
                                <option value="Fixed" <%=query.nature==='Fixed' ? 'selected' : '' %>>Fixed</option>
                                <option value="Variable" <%=query.nature==='Variable' ? 'selected' : '' %>>Variable
                                </option>
                                <option value="Unwanted" <%=query.nature==='Unwanted' ? 'selected' : '' %>>Unwanted
                                </option>
                                <option value="Others" <%=query.nature==='Others' ? 'selected' : '' %>>Others</option>
                                <option value="Baby Needs" <%=query.nature==='Baby Needs' ? 'selected' : '' %>>Baby
                                    Needs</option>
                            </select>
                        </div>
                        <div class="col-auto">
                            <div class="btn-group btn-group-sm">
                                <a href="/transactions" class="btn btn-outline-secondary" title="Clear Filters">
                                    <i class="fas fa-times"></i>
                                </a>
                            </div>
                        </div>

                        <div class="col-auto ms-auto d-flex gap-2">
                            <% const now=new Date(); const lastMonthDate=new Date(now.getFullYear(), now.getMonth() - 1,
                                1); %>
                                <a href="/transactions/month-end-report?month=<%= lastMonthDate.getMonth() + 1 %>&year=<%= lastMonthDate.getFullYear() %>"
                                    class="btn btn-outline-info btn-sm text-nowrap">
                                    <i class="fas fa-history me-1"></i>Last Month
                                </a>
                                <a href="/transactions/month-end-report"
                                    class="btn btn-info btn-sm text-white text-nowrap">
                                    <i class="fas fa-file-invoice me-1"></i>Report
                                </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        let timeout = null;
        function debounceSubmit() {
            clearTimeout(timeout);
            timeout = setTimeout(function () {
                document.getElementById('filterForm').submit();
            }, 500); // 500ms delay
        }
    </script>

    <!-- Transaction List -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-list me-2"></i>All Transactions
                </div>
                <ul class="list-group list-group-flush">
                    <% transactions.forEach(trx=> { %>
                        <li class="list-group-item">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1 fw-bold">
                                        <% if (trx.type==='income' || trx.type==='borrow' || trx.type==='loan_repayment'
                                            ) { %>
                                            <i class="fas fa-arrow-circle-up text-success me-2"></i>
                                            <% } else { %>
                                                <i class="fas fa-arrow-circle-down text-danger me-2"></i>
                                                <% } %>
                                                    <%= trx.category %>
                                                        <% if (trx.type==='lend' && trx.borrower) { %>
                                                            <span class="badge bg-warning text-dark ms-2">Loan to: <%=
                                                                    trx.borrower %></span>
                                                            <% } else if (trx.type==='loan_repayment' && trx.borrower) {
                                                                %>
                                                                <span class="badge bg-success ms-2">Repayment from: <%=
                                                                        trx.borrower %></span>
                                                                <% } else if (trx.type==='borrow' && trx.lender) { %>
                                                                    <span class="badge bg-info text-dark ms-2">From: <%=
                                                                            trx.lender %></span>
                                                                    <% } %>
                                    </h6>
                                    <p class="mb-1 small text-muted">
                                        <%= trx.description %>
                                    </p>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        <%= new Date(trx.date).toLocaleDateString() %> |
                                            <i class="fas fa-tag me-1"></i>
                                            <%= trx.type %>
                                                <% if (trx.type==='transfer' ) { %>
                                                    | <i class="fas fa-coins me-1"></i>Fee: Rs.<%= trx.transferFee ?
                                                        trx.transferFee.toFixed(2) : '0.00' %>
                                                        <% } %>
                                    </small>
                                </div>
                                <div class="text-end">
                                    <div class="mb-2">
                                        <strong
                                            class="<%= (trx.type === 'income' || trx.type === 'borrow' || trx.type === 'loan_repayment') ? 'text-success' : 'text-danger' %>">
                                            <%= (trx.type==='income' || trx.type==='borrow' ||
                                                trx.type==='loan_repayment' ) ? '+' : '-' %>Rs.<%= trx.amount.toFixed(2)
                                                    %>
                                        </strong>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/transactions/edit/<%= trx._id %>"
                                            class="btn btn-outline-secondary btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="/transactions/delete/<%= trx._id %>" method="POST"
                                            class="d-inline" onsubmit="return confirm('Delete this transaction?');">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </li>
                        <% }) %>
                            <% if (transactions.length===0) { %>
                                <li class="list-group-item text-center">No transactions found.</li>
                                <% } %>
                </ul>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>