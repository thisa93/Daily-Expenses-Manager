<%- include('../partials/header') %>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-university me-2 text-gradient"></i>
                    Your Accounts
                </h2>
                <a href="/sources/add" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-2"></i>Add New Account
                </a>
            </div>

            <div class="row g-4">
                <% sources.forEach(source=> { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100" style="transition: all 0.3s ease;">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title mb-1 fw-bold">
                                            <i class="fas <%= source.type === 'bank' ? 'fa-university' : source.type === 'cash' ? 'fa-money-bill-wave' : 'fa-credit-card' %> me-2"
                                                style="color: var(--primary-color);"></i>
                                            <%= source.name %>
                                        </h5>
                                        <span class="badge bg-secondary">
                                            <%= source.type.replace('_', ' ' ).toUpperCase() %>
                                        </span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <p class="text-muted mb-1 small">Current Balance</p>
                                    <h3 class="mb-0 <%= source.balance < 0 ? 'text-danger' : 'text-success' %>">
                                        Rs.<%= source.balance.toFixed(2) %>
                                    </h3>
                                </div>

                                <% if(source.type==='credit_card' && source.creditLimit) { %>
                                    <div class="mb-3 p-3 rounded" style="background: rgba(102, 126, 234, 0.05);">
                                        <div class="d-flex justify-content-between mb-1">
                                            <small class="text-muted">Credit Limit</small>
                                            <small class="fw-bold">Rs.<%= source.creditLimit.toFixed(2) %></small>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <small class="text-muted">Available</small>
                                            <small class="fw-bold text-success">Rs.<%= (source.creditLimit +
                                                    source.balance).toFixed(2) %></small>
                                        </div>
                                    </div>
                                    <% } %>

                                        <div class="d-grid">
                                            <a href="/sources/edit/<%= source._id %>" class="btn btn-outline-primary">
                                                <i class="fas fa-edit me-2"></i>Edit Account
                                            </a>
                                        </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>

                        <% if (sources.length===0) { %>
                            <div class="col-12">
                                <div class="card text-center py-5">
                                    <div class="card-body">
                                        <i class="fas fa-university fa-3x mb-3 text-muted"></i>
                                        <h5 class="text-muted">No accounts added yet</h5>
                                        <p class="text-muted">Add your first account to start tracking your finances</p>
                                        <a href="/sources/add" class="btn btn-primary mt-2">
                                            <i class="fas fa-plus-circle me-2"></i>Add Account
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <% } %>
            </div>

            <div class="mt-4">
                <a href="/dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>