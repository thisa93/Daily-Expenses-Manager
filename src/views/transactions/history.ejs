<%- include('../partials/header') %>

    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="text-center">Transaction History</h2>
            <div class="text-center">
                <a href="/dashboard" class="btn btn-outline-secondary btn-sm">Back to Dashboard</a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body bg-light py-2">
                    <form action="/transactions" method="GET" class="row g-2 align-items-center">
                        <div class="col-auto">
                            <label class="col-form-label btn-sm">Filter:</label>
                        </div>
                        <div class="col-auto">
                            <input type="date" name="startDate" class="form-control form-control-sm"
                                value="<%= query.startDate || '' %>" title="Start Date">
                        </div>
                        <div class="col-auto">
                            <input type="date" name="endDate" class="form-control form-control-sm"
                                value="<%= query.endDate || '' %>" title="End Date">
                        </div>
                        <div class="col-auto">
                            <select name="source" class="form-select form-select-sm">
                                <option value="">All Sources</option>
                                <% sources.forEach(s=> { %>
                                    <option value="<%= s._id %>" <%=query.source &&
                                        query.source.toString()===s._id.toString() ? 'selected' : '' %>>
                                        <%= s.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="col-auto">
                            <select name="nature" class="form-select form-select-sm">
                                <option value="">All Nature</option>
                                <option value="Fixed" <%=query.nature==='Fixed' ? 'selected' : '' %>>Fixed</option>
                                <option value="Variable" <%=query.nature==='Variable' ? 'selected' : '' %>>Variable
                                </option>
                                <option value="Unwanted" <%=query.nature==='Unwanted' ? 'selected' : '' %>>Unwanted
                                </option>
                                <option value="Others" <%=query.nature==='Others' ? 'selected' : '' %>>Others</option>
                                <option value="Baby Needs" <%=query.nature==='Baby Needs' ? 'selected' : '' %>>Baby
                                    Needs</option>
                            </select>
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary btn-sm">Apply</button>
                            <a href="/transactions" class="btn btn-secondary btn-sm">Clear</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Transaction List -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">All Transactions</div>
                <ul class="list-group list-group-flush">
                    <% transactions.forEach(trx=> { %>
                        <li class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">
                                    <%= trx.category %>
                                </h6>
                                <div class="text-end">
                                    <small
                                        class="<%= (trx.type === 'income' || trx.type === 'borrow') ? 'text-success' : 'text-danger' %>">
                                        <%= (trx.type==='income' || trx.type==='borrow' ) ? '+' : '-' %>Rs.<%=
                                                trx.amount.toFixed(2) %>
                                    </small>
                                    <div class="btn-group btn-group-sm ms-2">
                                        <a href="/transactions/edit/<%= trx._id %>"
                                            class="btn btn-outline-secondary btn-sm" title="Edit">
                                            Edit
                                        </a>
                                        <form action="/transactions/delete/<%= trx._id %>" method="POST"
                                            class="d-inline" onsubmit="return confirm('Delete this transaction?');">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                                Del
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <p class="mb-1 small">
                                <%= trx.description %>
                            </p>
                            <small class="text-muted">
                                <%= new Date(trx.date).toLocaleDateString() %> | <%= trx.type %>
                                        <% if (trx.type==='transfer' ) { %>
                                            | Fee: Rs.<%= trx.transferFee ? trx.transferFee.toFixed(2) : '0.00' %>
                                                <% } %>
                            </small>
                        </li>
                        <% }) %>
                            <% if (transactions.length===0) { %>
                                <li class="list-group-item text-center">No transactions found.</li>
                                <% } %>
                </ul>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>