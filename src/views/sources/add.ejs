<%- include('../partials/header') %>

    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card mt-4 shadow-lg">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Add New Account
                    </h4>
                </div>
                <div class="card-body">
                    <form action="/sources/add" method="POST">
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-signature me-2"></i>Account Name
                            </label>
                            <input type="text" class="form-control form-control-lg" name="name"
                                placeholder="e.g. HDFC Bank, My Wallet" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-list me-2"></i>Account Type
                            </label>
                            <select class="form-select form-select-lg" name="type" id="type" onchange="toggleLimit()">
                                <option value="bank"><i class="fas fa-university"></i> Bank Account</option>
                                <option value="cash">Cash In Hand</option>
                                <option value="credit_card">Credit Card</option>
                            </select>
                        </div>
                        <div class="mb-3 d-none" id="limitField">
                            <label class="form-label">
                                <i class="fas fa-credit-card me-2"></i>Credit Limit (Max Limit)
                            </label>
                            <input type="number" step="0.01" class="form-control form-control-lg" name="creditLimit"
                                value="0">
                        </div>
                        <div class="mb-4">
                            <label class="form-label" id="balanceLabel">
                                <i class="fas fa-wallet me-2"></i>Initial Balance
                            </label>
                            <input type="number" step="0.01" class="form-control form-control-lg" name="balance"
                                required>
                            <small class="form-text text-muted" id="balanceHelp">Positive for money you already have.
                                Negative for money you owe (Credit Card Debt).</small>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-grow-1">
                                <i class="fas fa-save me-2"></i>Add Account
                            </button>
                            <a href="/dashboard" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleLimit() {
            const type = document.getElementById('type').value;
            const limitField = document.getElementById('limitField');
            const balanceLabel = document.getElementById('balanceLabel');
            const balanceHelp = document.getElementById('balanceHelp');

            if (type === 'credit_card') {
                limitField.classList.remove('d-none');
                balanceLabel.innerText = "Available Credit (Limit - Owed)";
                balanceHelp.innerText = "e.g. If Limit is 50,000 and you owe 5,000, enter 45,000.";
            } else {
                limitField.classList.add('d-none');
                balanceLabel.innerText = "Initial Balance";
                balanceHelp.innerText = "Amount currently in the account/hand.";
            }
        }
        toggleLimit(); 
    </script>

    <%- include('../partials/footer') %>